#
# A simple Makefile
#

######

ifeq ("$(PATSHOME)","")
  PATSHOMEQ="$(ATSHOME)"
else
  PATSHOMEQ="$(PATSHOME)"
endif

ifeq ("$(PATSHOMERELOC)","")
  PATSHOMERELOCQ="$(ATSHOMERELOC)"
else
  PATSHOMERELOCQ="$(PATSHOMERELOC)"
endif

######

PATSCC=$(PATSHOMEQ)/bin/patscc
PATSOPT=$(PATSHOMEQ)/bin/patsopt

######

all:: ; $(MAKE) -C ../promela/TEST

######

all:: test_scratch_dats.json
all:: test01_dats.json
all:: test_example_01_peterson_dats.json
all:: test_thesis_01_dats.json
all:: test_thesis_02_dats.json
all:: test_thesis_03_dats.json

######
#
%_dats.json: %.dats ; \
  $(PATSOPT) --jsonize-2 -o $@ -d $<
#
######

RMF=rm -f

######

clean:: ; $(RMF) *~

cleanall:: clean
cleanall:: ; $(RMF) test_scratch_dats.json
cleanall:: ; $(RMF) test01_dats.json
cleanall:: ; $(RMF) test02_dats.json
cleanall:: ; $(RMF) test_example_01_peterson_dats.json
cleanall:: ; $(RMF) test_thesis_01_dats.json
cleanall:: ; $(RMF) test_thesis_02_dats.json
cleanall:: ; $(RMF) test_thesis_03_dats.json

###### end of [Makefile] ######


